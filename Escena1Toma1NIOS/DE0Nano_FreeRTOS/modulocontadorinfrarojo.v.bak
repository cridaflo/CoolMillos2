module moduloContadorInfrarojo #(parameter TIMEOUT = 2000)(reset, clock, inSignal, outSignal, hayNegro);

//INPUTS AND OUTPUTS
input reset;//Reset
input clock;//Clock
input inSignal;
output reg outSignal=0;
output reg hayNegro=0;

//REGS
reg [11:0]contador=0;//Contador
reg estado; //0: Mandar se√±al Up. 1: Esperar tiempo abajo


//Logica secuencial MAQUINA DE ESTADOS
always@(posedge clock)
begin
	if(reset)
		begin
			estado<=0;
			contador<=0;
			outSignal<=0;
		end
	else
	begin
		if(estado==0)
			begin
				if(contador[1]==1)
					begin
						estado<=1;
						contador<=0;
						outSignal<=0;
					end
				else
					begin
						contador<=contador+1;
						outSignal<=1;
					end
			end
		else if(estado==1)
			begin
				if(inSignal==0)
					begin
					estado<=0;
					contador<=0;
					hayNegro<=0;
					end
				else if(contador>TIMEOUT)
					begin
					hayNegro<=1;
					estado<=0;
					contador<=0;
					end
				else
					contador<=contador+1;
			end
	end
end

endmodule